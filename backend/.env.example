# Server Configuration
PORT=4000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# LLM Providers (Optional - Stubs work without these)
LLM_PROVIDER=stub
OPENAI_API_KEY=your_openai_api_key_optional
ANTHROPIC_API_KEY=your_anthropic_api_key_optional
GEMINI_API_KEY=your_gemini_api_key_optional

# Embedding Provider (Optional - Stub works without these)
EMBEDDING_PROVIDER=stub
HUGGINGFACE_API_KEY=your_huggingface_api_key_optional

# TTS Provider (Optional - Stub works without these)
TTS_PROVIDER=stub
ELEVENLABS_API_KEY=your_elevenlabs_api_key_optional
GOOGLE_CLOUD_TTS_KEY=your_google_cloud_tts_key_optional

# Vector Database
VECTOR_DB_MODE=supabase

# Redis (Optional - for job queue)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
